<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_margin="9dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="222dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:padding="4dp"
                android:text="IDENTIFIANT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#311b92"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="167dp"
                android:layout_marginTop="-30dp"
                android:padding="3dp"
                android:text="Nom et Prénom"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#311b92"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/structure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="167dp"
                android:layout_marginTop="18dp"
                android:text="Structure"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date_facture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:paddingStart="3dp"
                android:text="Date Facture"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/montant_paye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="249dp"
                android:layout_marginTop="42dp"
                android:paddingLeft="3dp"
                android:text="Montant payé :"
                android:textStyle="bold"
                android:textColor="#15B004"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/date_paiement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:paddingLeft="3dp"
                android:text="Date paiement"
                android:textColor="#15B004"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</HorizontalScrollView>
</ScrollView>

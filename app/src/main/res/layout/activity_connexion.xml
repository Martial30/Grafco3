<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connexion"
    android:layout_gravity="center"
    android:id="@+id/uet"
    android:background="@drawable/fondecran2">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="500dp"
            android:layout_marginTop="83dp"
            android:layout_marginBottom="100dp"
            android:elevation="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/logoafricao"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="100dp"
                android:src="@drawable/logo"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAGE DE CONNEXION"
                android:textColor="@color/wave"
                android:layout_marginTop="160dp"
                android:layout_marginStart="50dp"
                android:textSize="24dp"
                />

            <EditText
                android:id="@+id/textlogin"
                android:layout_width="271dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="#FEFEDF"
                android:paddingStart="10dp"
                android:ems="10"
                android:hint="Login"
                android:inputType="textAutoComplete"
                android:drawableEnd="@drawable/ic_baseline_person_24"/>

            <EditText
                android:id="@+id/textmdp"
                android:layout_width="274dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Mot de passe"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:background="#FEFEDF"
                app:passwordToggleEnabled="true"
                android:drawableEnd="@drawable/ic_baseline_https_24"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mot de passe oubliÃ© ?"
                android:layout_marginTop="460dp"
                android:layout_marginLeft="78dp"
                android:textSize="18sp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="400dp"
                android:layout_marginStart="60dp"
                app:cardCornerRadius="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F57C00">

                    <RelativeLayout
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/btnConnexion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginRight="15dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Connexion"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
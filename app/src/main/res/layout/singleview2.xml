<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<!--tools:context=".voir_vocal_rapport"-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="9dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="878dp"
            android:layout_height="222dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:padding="4dp"
                android:text="IDENTIFIANT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#311b92"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomPrenoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="167dp"
                android:layout_marginTop="-30dp"
                android:padding="3dp"
                android:text="Nom et Prénom"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#311b92"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/structures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="167dp"
                android:layout_marginTop="18dp"
                android:text="Structure"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date_factures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:paddingStart="3dp"
                android:text="Date Facture"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/creances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="167dp"
                android:layout_marginTop="42dp"
                android:paddingLeft="3dp"
                android:text="Créance :"
                android:textStyle="bold"
                android:textColor="#F94107"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/date_echeances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:paddingLeft="3dp"
                android:text="Date Echéance"
                android:textColor="#F54007"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>